<div class="max-w-6xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Audio File Separator</h1>
    <p class="text-gray-600">Upload audio files to separate vocals from accompaniment using AI</p>
  </div>

  <!-- Upload Form Section -->
  <div class="bg-white rounded-lg shadow-sm border mb-8 p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Upload New Audio File</h2>
    <div id="upload_form">
      <%= render "upload_form", audio_file: @audio_file %>
    </div>
  </div>

  <!-- Audio Files List -->
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="p-6 border-b">
      <h2 class="text-xl font-semibold text-gray-900">Your Audio Files</h2>
    </div>

    <div id="audio_files" class="divide-y">
      <% if @audio_files.any? %>
        <% @audio_files.each do |audio_file| %>
          <%= render "audio_file", audio_file: audio_file %>
        <% end %>
      <% else %>
        <div class="p-6 text-center text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.895 2-4 2s-4-.895-4-2 1.895-2 4-2 4 .895 4 2zm12-3c0 1.105-1.895 2-4 2s-4-.895-4-2 1.895-2 4-2 4 .895 4 2zM9 10l12-3" />
          </svg>
          <p class="text-lg font-medium text-gray-900 mb-2">No audio files yet</p>
          <p class="text-gray-500">Upload your first audio file to get started with stem separation</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
