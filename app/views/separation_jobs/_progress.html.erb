<div class="bg-gray-50 rounded-lg p-4">
  <div class="flex items-center justify-between mb-2">
    <span class="text-sm font-medium text-gray-700">
      Processing: <%= separation_job.separation_type.humanize %>
    </span>
    <span class="text-sm text-gray-500">
      <%= separation_job.progress.round(1) %>%
    </span>
  </div>

  <div class="w-full bg-gray-200 rounded-full h-2">
    <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
         style="width: <%= separation_job.progress %>%"></div>
  </div>

  <div class="flex items-center justify-between mt-2 text-xs text-gray-500">
    <span>
      <% if separation_job.running? %>
        <% if separation_job.estimated_completion %>
          ETA: <%= time_ago_in_words(separation_job.estimated_completion) %>
        <% else %>
          Processing...
        <% end %>
      <% elsif separation_job.pending? %>
        Queued for processing
      <% end %>
    </span>

    <% if separation_job.started_at %>
      <span>
        Elapsed: <%= time_ago_in_words(separation_job.started_at) %>
      </span>
    <% end %>
  </div>

  <% if separation_job.error_message.present? %>
    <div class="mt-2 text-sm text-red-600">
      Error: <%= separation_job.error_message %>
    </div>
  <% end %>
</div>